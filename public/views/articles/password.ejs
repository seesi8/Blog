<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password</title>
    <!--Owl-Carousel-->
    <link rel="stylesheet" href="/CSS/owl.carousel.min.css">
    <link rel="stylesheet" href="/CSS/owl.theme.default.min.css">

    <!--AOS Lib-->
    <link rel="stylesheet" href="./CSS/aos.css">

    <!--font awesome-->
    <link rel="stylesheet" href="/CSS/all.css">
    <!--font awesome-->
    <link rel="stylesheet" href="/CSS/nav.css">
    <!--custom css-->
    <link rel="stylesheet" href="/CSS/password.css">
</head>

<body>
    <!--Nav-->
    <%- include('_nav') %>
        <!--Nav end-->
        <main>
            <div class="container">
                <form action="/articles/password/<%=password.path %>/<%=password.id%>/methods?_method=PATCH" method="POST">
                    <h1>Insert Username and Password to Continue</h1>
                    <div class="form-group">
                        <input required type="text" name="username" id="username" for="username" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <input required for="password" type="text" name="password" id="password" placeholder="Password"
                            class="password">
                    </div>
                    <div class="container2">
                        <div class="correct">
                            <p><%= password.correct %></p>
                        </div>
                    </div>
                    <a class="new_account" href="/articles/new_account">No Account: Create Account</a>
                    <div class="btn-submit">
                        <button type="submit" class="Submit-btn btn">Go</button>
                    </div>
                </form>
            </div>

        </main>
        <%- include('_footer')%>
</body>

</html>