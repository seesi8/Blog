<div class="form-group">
  <label for="title">Title</label>
  <br>
  <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control text" placeholder="Title">
</div>
<div class="form-group">
  <label for="title">Tags</label>
  <br>
  <input required value="<%= article.tags %>" type="text" name="tags" id="tags" class="form-control text" placeholder="Tags Seperated by Comma">
</div>
<div class="form-group">
  <label for="description">Description</label>
  <br>
  <textarea name="description" id="description" class="form-control text" placeholder="Description" ><%= article.description %></textarea>
</div>
<div class="form-group">
  <label for="markdown">Markdown Or HTML</label>
  <br>
  <textarea required name="markdown" id="markdown" class="form-control text" placeholder="Markdown Or HTML"><%= article.markdown %></textarea>
</div>
<div class="form-group">
  <label for="image">Tilte Image</label>
  <br>
  <input required value="" name="image" id="image" class="form-control" placeholder="image" type="file">
</div>
<div class="btn-submit">
  <a href="/" class="Cancel-btn">Cancel</a>
  <button type="submit" class="Submit-btn btn" >Save</button>
</div>
