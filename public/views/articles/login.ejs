<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Account
  </title>
  <!--Owl-Carousel-->
  <link rel="stylesheet" href="/CSS/owl.carousel.min.css">
  <link rel="stylesheet" href="/CSS/owl.theme.default.min.css">

  <!--AOS Lib-->
  <link rel="stylesheet" href="./CSS/aos.css">

  <!--font awesome-->
  <link rel="stylesheet" href="/CSS/all.css">
  <!--custom css-->
  <link rel="stylesheet" href="/CSS/login.css">
  <link rel="stylesheet" href="/CSS/nav.css">
</head>

<body>
  <!--Nav-->
  <%- include('_nav') %>
    <!--Nav end-->
    <main>
      <div class="test"></div>
      <div class="container">
        <h1 class="new">Welcome</h1>
        <div class="create">
            <form action="/articles/newuser" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="Username">Username</label>
                    <br>
                    <input required value="" type="text" name="username" id="username" class="form-control text" placeholder="Username">
                </div>    
                <div class="form-group">
                    <label for="Password">Password</label>
                    <br>
                    <input required value="" type="text" name="password" id="password" class="form-control text" placeholder="Password">
                </div>    
                <div class="form-group">
                    <label for="primage">Profile Picture</label>
                    <br>
                    <input value="" type="file" name="primage" id="primage" class="form-control text">
                </div> 
                <button type="submit" class="btn createbtn">Create</button>   
            </form>
        </div>
      </div>
    </main>
    <%- include('_footer')%>
</body>

</html>